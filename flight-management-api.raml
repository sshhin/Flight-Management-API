          200:
            body:
              application/json:
                type: Airport
                example: !include Examples/AirportExample.raml
          400:
            body:
              application/json:
                example:
                  message: Airport not found

    /modifyAirport/{airportCode}:
      put:
        body:
          application/json:
            type: Airport
            example: !include Examples/AirportExample.raml
        responses:
          200:
            body:
              application/json:
                example:
                  message: Airport updated
          400:
            body:
              application/json:
                example:
                  message: Airport not found

    /deleteAirport/{airportCode}:
      delete:
        responses:
          200:
            body:
              application/json:
                example:
                  message: Airport deleted
          400:
            body:
              application/json:
                example:
                  message: Airport not found

    /patchAirport/{airportCode}:
      patch:
        queryParameters:
          airportName:
            required: false
          airportLocation:
            required: false
        responses:
            200:
              body:
                application/json:
                  example:
                    message: Airport patched
            400:
              body:
                application/json:
                  example:
                    message: Airport not found

    /showByLocation/{airportLocation}:
