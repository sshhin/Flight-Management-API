#%RAML 1.0
title: flight-api

types:
  Flight: !include DataType/FlightDataType.raml
/flights:
  /show
  get:
    responses:
      200:
        body:
          application/json:
            type: Flight[]
            example: !include /Examples/FlightGetAllExample.raml
              
  post:
    body:
      application/json:
        type: Flight
        example: !include /Examples/FlightPostExample.raml
          
  
            
  /{ID}:
    get:
     responses:
      200:
        body:
          application/json:
            type: Flight
            example : !include /Examples/FlightExample.raml
            
    delete:
       responses:
        200:
          body:
           application/json:
            example: 
              message: Flight deleted
    put:
      body:
        application/json:
          type: Flight
          example: !include /Examples/FlightExample.raml
      responses:
        200:
          body:
            application/json:
              example:
                message: Flight updated 
              